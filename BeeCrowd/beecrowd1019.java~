import java.io.IOException;
import java.util.Scanner;
public class beecrowd1019 {
    public static void main(String[] args) throws IOException {
        Scanner sc= new Scanner(System.in);
        int n= sc.nextInt();
        int h= n/3600;
        int m=n-(h*3600);
        m=n/60;
        int s=n-(m*60);
        System.out.println(h+":"+m":"+s);
    }
}
        
    }
 
}